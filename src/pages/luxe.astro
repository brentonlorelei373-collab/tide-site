---
import Layout from '../layouts/Layout.astro';

const products = [
  { name: 'Luxe Leather Jacket', desc: '意大利植鞣头层小牛皮，手工缝线', price: '¥4,999', badge: '限量 100 件',
    img: 'https://images.unsplash.com/photo-1551028719-00167b16eac5?w=600&q=80&auto=format&fit=crop' },
  { name: 'Luxe Denim Jacket', desc: '日本冈山 14oz 赤耳丹宁，原色', price: '¥2,999', badge: '限量 200 件',
    img: 'https://images.unsplash.com/photo-1576995853123-5a10305d93c0?w=600&q=80&auto=format&fit=crop' },
  { name: 'Luxe Cashmere Hoodie', desc: '蒙古 A 级山羊绒，双层针织', price: '¥3,599', badge: '限量 150 件',
    img: 'https://images.unsplash.com/photo-1578587018452-892bacefd3f2?w=600&q=80&auto=format&fit=crop' },
  { name: 'Luxe Cargo Pants', desc: '日本 Cordura 面料，定制金属扣', price: '¥1,999', badge: '限量 300 件',
    img: 'https://images.unsplash.com/photo-1517438476312-10d79c077509?w=600&q=80&auto=format&fit=crop' },
  { name: 'Luxe Down Parka', desc: '800蓬鹅绒填充，Gore-Tex 外层', price: '¥5,999', badge: '限量 80 件',
    img: 'https://images.unsplash.com/photo-1544022613-e87ca75a784a?w=600&q=80&auto=format&fit=crop' },
  { name: 'Luxe Silk Shirt', desc: '苏州双面真丝，珍珠母贝纽扣', price: '¥1,699', badge: '限量 200 件',
    img: 'https://images.unsplash.com/photo-1596755094514-f87e34085b2c?w=600&q=80&auto=format&fit=crop' },
];
---

<Layout title="Tide Luxe" description="Tide Luxe — 街头基因与高级时装的碰撞。限量发售，独立编号。">

  <!-- Hero -->
  <section class="relative bg-[var(--color-bg-dark)] overflow-hidden min-h-[70vh] flex items-center">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1558171813-4c088753af8f?w=1400&q=80&auto=format&fit=crop" alt="" class="w-full h-full object-cover opacity-25" loading="eager" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-black/80"></div>
    </div>
    <div class="relative max-w-[980px] mx-auto px-6 py-32 text-center">
      <p class="text-xs tracking-[0.3em] uppercase text-amber-400 mb-4 animate-fade-up">02 — Luxe</p>
      <h1 class="text-5xl md:text-8xl font-bold tracking-tight text-white animate-fade-up-delay-1">Luxe</h1>
      <p class="mt-4 text-lg md:text-xl text-gray-400 animate-fade-up-delay-2">穿在身上的态度宣言。限量发售，独立编号。</p>
    </div>
  </section>

  <!-- Quote -->
  <section class="bg-[#0a0a0a]">
    <div class="max-w-[680px] mx-auto px-6 py-16 md:py-20 text-center">
      <blockquote class="text-xl md:text-2xl font-light text-gray-400 leading-relaxed italic">
        "奢华不是价格标签。<br />奢华是你穿上它时，整个房间的空气都变了。"
      </blockquote>
    </div>
  </section>

  <!-- Lookbook -->
  <section class="bg-[var(--color-bg-dark)]">
    <div class="max-w-[980px] mx-auto px-6 py-16 md:py-24">
      <div class="grid md:grid-cols-3 gap-4">
        {[
          "https://images.unsplash.com/photo-1539109136881-3be0616acf4b?w=600&q=80&auto=format&fit=crop",
          "https://images.unsplash.com/photo-1487222477894-8943e31ef7b2?w=600&q=80&auto=format&fit=crop",
          "https://images.unsplash.com/photo-1495385794356-15371f348c31?w=600&q=80&auto=format&fit=crop",
        ].map((src, i) => (
          <div class="aspect-[3/4] rounded-2xl overflow-hidden">
            <img src={src} alt={`Luxe Lookbook ${i+1}`} class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Craftsmanship -->
  <section class="bg-[#0a0a0a]">
    <div class="max-w-[980px] mx-auto px-6 py-16 md:py-24">
      <div class="grid md:grid-cols-3 gap-10">
        {[
          { title: '顶级材质', desc: '意大利小牛皮、日本赤耳丹宁、蒙古 A 级山羊绒。全球最优质产地直供。' },
          { title: '限量编号', desc: '每件独立编号 + 品牌鉴证卡。不只是衣服，是有身份的收藏品。' },
          { title: '手工工艺', desc: '皮具由意大利匠人手工缝制，丹宁在日本冈山小型工坊织造。' },
        ].map(d => (
          <div class="text-center">
            <h3 class="text-base font-semibold text-white mb-2">{d.title}</h3>
            <p class="text-sm text-gray-400 leading-relaxed">{d.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="bg-[var(--color-bg-dark)]">
    <div class="max-w-[980px] mx-auto px-6 py-20 md:py-28">
      <h2 class="text-2xl md:text-3xl font-semibold tracking-tight text-white text-center mb-12">本季单品</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((p) => (
          <div class="group bg-[#111] rounded-2xl overflow-hidden hover:bg-[#1a1a1a] transition-colors">
            <div class="aspect-square overflow-hidden relative">
              <img src={p.img} alt={p.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" />
              <span class="absolute top-4 right-4 text-[10px] tracking-widest uppercase text-amber-400 bg-black/70 backdrop-blur-sm px-3 py-1 rounded-full">
                {p.badge}
              </span>
            </div>
            <div class="p-5">
              <h3 class="text-base font-semibold text-white">{p.name}</h3>
              <p class="mt-1 text-sm text-gray-500">{p.desc}</p>
              <p class="mt-3 text-base font-medium text-amber-400">{p.price}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-[#0a0a0a]">
    <div class="max-w-[680px] mx-auto px-6 py-16 md:py-24 text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-white">获取发售通知</h2>
      <p class="mt-3 text-base text-gray-400">Luxe 系列采用 Drop 限量发售。关注我们获取最新发售动态。</p>
      <div class="mt-6 flex items-center justify-center gap-4">
        <a href="mailto:hello@tide.fashion" class="inline-flex items-center justify-center px-8 py-3 rounded-full bg-amber-400 text-black text-sm font-semibold hover:bg-amber-300 transition-colors">
          联系我们
        </a>
        <a href="/about" class="inline-flex items-center justify-center px-8 py-3 rounded-full border border-gray-600 text-gray-300 text-sm font-medium hover:bg-white hover:text-black hover:border-transparent transition-all">
          品牌故事
        </a>
      </div>
    </div>
  </section>

</Layout>
