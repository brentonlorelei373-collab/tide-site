---
import Layout from '../layouts/Layout.astro';

const products = [
  { name: 'Essential Tee', desc: '260g 重磅有机棉，落肩剪裁', price: '¥299',
    img: 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=600&q=80&auto=format&fit=crop' },
  { name: 'Essential Hoodie', desc: '480g 毛圈面料，宽松廓形', price: '¥599',
    img: 'https://images.unsplash.com/photo-1556821840-3a63f95609a7?w=600&q=80&auto=format&fit=crop' },
  { name: 'Essential Pants', desc: '弹力斜纹棉，锥形裤型', price: '¥499',
    img: 'https://images.unsplash.com/photo-1624378439575-d8705ad7ae80?w=600&q=80&auto=format&fit=crop' },
  { name: 'Essential Jacket', desc: '再生尼龙，防风防泼水', price: '¥899',
    img: 'https://images.unsplash.com/photo-1591047139829-d91aecb6caea?w=600&q=80&auto=format&fit=crop' },
  { name: 'Essential Shorts', desc: '速干再生涤纶，隐藏口袋', price: '¥349',
    img: 'https://images.unsplash.com/photo-1591195853828-11db59a44f6b?w=600&q=80&auto=format&fit=crop' },
  { name: 'Essential Longsleeve', desc: '300g 华夫格织纹，修身版型', price: '¥359',
    img: 'https://images.unsplash.com/photo-1618354691373-d851c5c3a990?w=600&q=80&auto=format&fit=crop' },
];
---

<Layout title="Tide Essential" description="Tide Essential — 回归本质的极简美学。有机面料，去性别化设计。">

  <!-- Hero -->
  <section class="relative bg-[var(--color-bg)] overflow-hidden">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?w=1400&q=80&auto=format&fit=crop" alt="" class="w-full h-full object-cover opacity-8" loading="eager" />
    </div>
    <div class="relative max-w-[980px] mx-auto px-6 pt-24 pb-16 md:pt-36 md:pb-24 text-center">
      <p class="text-xs tracking-[0.3em] uppercase text-[var(--color-text-tertiary)] mb-4 animate-fade-up">01 — Essential</p>
      <h1 class="text-5xl md:text-7xl font-semibold tracking-tight text-[var(--color-primary)] animate-fade-up-delay-1">Essential</h1>
      <p class="mt-4 text-lg text-[var(--color-text-secondary)] animate-fade-up-delay-2">少即是多。每一件都是衣橱的基石。</p>
    </div>
  </section>

  <!-- Quote -->
  <section class="bg-[var(--color-bg-secondary)]">
    <div class="max-w-[680px] mx-auto px-6 py-16 md:py-20 text-center">
      <blockquote class="text-xl md:text-2xl font-light text-[var(--color-text-secondary)] leading-relaxed italic">
        "我们设计让你穿上后忘记它存在的衣服。<br />因为好的基础款，从不喧宾夺主。"
      </blockquote>
    </div>
  </section>

  <!-- Lookbook -->
  <section class="bg-[var(--color-bg)]">
    <div class="max-w-[980px] mx-auto px-6 py-16 md:py-24">
      <div class="grid md:grid-cols-2 gap-6">
        <div class="aspect-[4/5] rounded-2xl overflow-hidden">
          <img src="https://images.unsplash.com/photo-1525507119028-ed4c629a60a3?w=800&q=80&auto=format&fit=crop" alt="Essential Lookbook" class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" loading="lazy" />
        </div>
        <div class="aspect-[4/5] rounded-2xl overflow-hidden">
          <img src="https://images.unsplash.com/photo-1479064555552-3ef4979f8908?w=800&q=80&auto=format&fit=crop" alt="Essential Detail" class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Details -->
  <section class="bg-[var(--color-bg-secondary)]">
    <div class="max-w-[980px] mx-auto px-6 py-16 md:py-24">
      <div class="grid md:grid-cols-3 gap-10">
        {[
          { title: '可持续面料', desc: 'GOTS 认证有机棉。再生涤纶来自回收海洋塑料。每件附面料溯源卡。' },
          { title: '去性别化版型', desc: '统一尺码体系，不区分男女。S—3XL 全尺码覆盖。' },
          { title: '克制色盘', desc: '黑、白、灰、藏青。四种颜色，无限搭配，闭眼穿也不会出错。' },
        ].map(d => (
          <div class="text-center">
            <h3 class="text-base font-semibold text-[var(--color-primary)] mb-2">{d.title}</h3>
            <p class="text-sm text-[var(--color-text-secondary)] leading-relaxed">{d.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="bg-[var(--color-bg)]">
    <div class="max-w-[980px] mx-auto px-6 py-20 md:py-28">
      <h2 class="text-2xl md:text-3xl font-semibold tracking-tight text-[var(--color-primary)] text-center mb-12">全系单品</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((p) => (
          <div class="group rounded-2xl overflow-hidden bg-[var(--color-bg-secondary)]">
            <div class="aspect-square overflow-hidden">
              <img src={p.img} alt={p.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" />
            </div>
            <div class="p-5">
              <h3 class="text-base font-semibold text-[var(--color-primary)]">{p.name}</h3>
              <p class="mt-1 text-sm text-[var(--color-text-tertiary)]">{p.desc}</p>
              <p class="mt-3 text-base font-medium text-[var(--color-primary)]">{p.price}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-[var(--color-bg-secondary)] border-t border-[var(--color-border-light)]">
    <div class="max-w-[680px] mx-auto px-6 py-16 md:py-24 text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-[var(--color-primary)]">了解发售信息</h2>
      <p class="mt-3 text-base text-[var(--color-text-secondary)]">关注我们的社交媒体，获取 Essential 系列最新动态。</p>
      <div class="mt-6 flex items-center justify-center gap-4">
        <a href="/about" class="inline-flex items-center justify-center px-8 py-3 rounded-full bg-[var(--color-primary)] text-white text-sm font-medium hover:bg-gray-800 transition-colors">
          关于 TIDE
        </a>
        <a href="mailto:hello@tide.fashion" class="inline-flex items-center justify-center px-8 py-3 rounded-full border border-[var(--color-border)] text-sm font-medium hover:bg-[var(--color-primary)] hover:text-white hover:border-transparent transition-all">
          联系我们
        </a>
      </div>
    </div>
  </section>

</Layout>
