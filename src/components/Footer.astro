---
const year = new Date().getFullYear();

const footerLinks = [
  {
    title: '产品系列',
    links: [
      { label: 'Tide Essential', href: '/essential' },
      { label: 'Tide Luxe', href: '/luxe' },
    ],
  },
  {
    title: '品牌',
    links: [
      { label: '关于我们', href: '/about' },
      { label: '博客', href: '/blog' },
    ],
  },
  {
    title: '联系',
    links: [
      { label: 'Instagram', href: 'https://instagram.com' },
      { label: 'Email', href: 'mailto:hello@tide.fashion' },
    ],
  },
];
---

<footer class="bg-[var(--color-bg-secondary)] border-t border-[var(--color-border-light)]">
  <div class="max-w-[980px] mx-auto px-6 pt-10 pb-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="text-lg font-semibold tracking-widest text-[var(--color-primary)]">TIDE</a>
        <p class="mt-2 text-xs text-[var(--color-text-tertiary)] leading-relaxed">
          潮流不追随。<br />
          潮流由你定义。
        </p>
      </div>

      {
        footerLinks.map((section) => (
          <div>
            <h4 class="text-xs font-semibold text-[var(--color-text-secondary)] mb-3">
              {section.title}
            </h4>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-xs text-[var(--color-text-tertiary)] hover:text-[var(--color-primary)] transition-colors"
                    target={link.href.startsWith('http') ? '_blank' : undefined}
                    rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>

  <div class="border-t border-[var(--color-border-light)]">
    <div class="max-w-[980px] mx-auto px-6 py-4 flex flex-col md:flex-row justify-between items-center gap-2">
      <p class="text-xs text-[var(--color-text-tertiary)]">
        &copy; {year} TIDE. All rights reserved.
      </p>
      <p class="text-xs text-[var(--color-text-tertiary)]">
        Born in the streets. Refined by design.
      </p>
    </div>
  </div>
</footer>
